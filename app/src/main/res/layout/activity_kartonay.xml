<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kartonay"
    android:background="@color/colorBackground">

    <EditText
        android:id="@+id/Kartnum"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="44dp"
        android:ems="15"
        android:hint="Kart Numarası"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="63dp"
        android:maxLength="16"/>

    <EditText
        android:id="@+id/owner"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="126dp"
        android:ems="15"
        android:hint="Kart Sahibinin Adı Soyadı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Kartnum"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="180dp"
        android:hint="Tarihi (GG.AA.YYYY)"
        android:inputType="date|number"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="188dp" />

    <EditText
        android:id="@+id/ccv"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="57dp"
        android:hint="  CCV  "
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="188dp"
        android:inputType="number"
        android:maxLength="3"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="239dp"
        android:text="Kart bilgilerimi kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="266dp"
        android:checked="true"/>

    <Button
        android:id="@+id/buttonkaydet"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/button_pressed"
        android:text="Kaydet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="35dp"
        android:text="Kart Bilgileri"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="167dp"
        android:text="Bu sayfa ödeme sayfası değildir. Kaydet butonuna tıkladığınızda kartınızdan herhangi bir tutar çekilmeyecek, ödeme işleminize devam edebilmeniz için kartınız sisteme kaydedilecektir. "
        android:textStyle="italic" />


</RelativeLayout>